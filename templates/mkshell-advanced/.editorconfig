root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
tab_width = 8
indent_size = 8
indent_style = tab

[*.nix]
max_line_length = 100
indent_size = 2
indent_style = space

[justfile]
indent_size = 4
indent_style = space

[*.md]
indent_size = 2
indent_style = space

[*.{toml, yaml, json}]
indent_size = 2
indent_style = space

[*.py]
indent_size = 4
max_line_length = 79
indent_style = space
