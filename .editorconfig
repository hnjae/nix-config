root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
tab_width = 8

[*.nix]
indent_size = 2
max_line_length = 100
indent_style = space

[{*.{sh,bash,envrc},{*.envrc.*}}]
indent_size = 2
indent_style = space

[*.py]
indent_size = 4
max_line_length = 79
indent_style = space

[*.{fish,nu}]
indent_size = 4
indent_style = space

[*.md]
indent_size = 4
indent_style = space

[{justfile,.justfile}]
indent_size = 4
indent_style = space

[*.{json,jsonc,yaml}]
indent_size = 2
indent_style = space
