root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
tab_width = 8
max_line_length = 80

[*.nix]
indent_size = 2
indent_style = space

[*.sh]
indent_size = 2
indent_style = space

[*.lua]
indent_size = 2
indent_style = space

# mdformat force indent size to 2
[*.md]
indent_size = 2
indent_style = space

[justfile]
indent_size = 4
indent_style = space
